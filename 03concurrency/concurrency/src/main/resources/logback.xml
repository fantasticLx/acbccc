<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %green([%thread]) %-5level %blue(%logger{36}.%M) %L - %msg%n</Pattern>
    </layout>
  </appender>

<!--  <logger name="com.base22" level="TRACE"/>  指定特定包下的日志级别-->


  <root level="debug">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>